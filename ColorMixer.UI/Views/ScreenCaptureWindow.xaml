<Window x:Class="ColorMixer.UI.Views.ScreenCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorMixer.UI.Views"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        MouseLeftButtonDown="ScreenCaptureWindow_OnMouseLeftButtonDown"
        MouseMove="ScreenCaptureWindow_OnMouseMove" Cursor="Cross">
    <Canvas>
        <local:ColorPicker x:Name="ColorPicker"/>
    </Canvas>
</Window>
